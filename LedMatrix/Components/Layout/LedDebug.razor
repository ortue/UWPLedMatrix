@if (Environment.MachineName == "PC-BENOIT")
{
  <div class="row mt-3">

    @if (Pixels.PixelDebug != null)
      @foreach (Pixel pixel in Pixels.PixelDebug)
      {
        <div class="col p-2" style="@CouleurBG(pixel)">
          @*@pixel.Position*@
          &nbsp;
        </div>

        @if (pixel.Position % 20 == 0)
        {
          <div />
        }
      }

  </div>

  <div class="mt-3">
    <button class="btn btn-warning" @onclick="Refresh">Debug @IsDebug</button>
  </div>
} 